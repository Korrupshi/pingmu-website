---
import { heroDescription } from "../constants";
import { heroSpanText } from "../constants";
import { heroTitle } from "../constants";
---

<div class="hidden relative z-10 h-full md:flex md:flex-row justify-center items-center gap-4 px-4 ">
    <div class="flex flex-col flex-1  p-4 h-full  justify-center max-w-xl " >
        <h1 class="text-6xl  text-textPrimary font-bold ps-3 pb-4">{heroTitle}
            <span class="text-primary">{heroSpanText}</span>
        </h1>
        <p class="text-lg text-textSecondary font-light ps-3 pb-6">
            {heroDescription}
        </p>
        <br>
  
        <a class="w-fit " href='https://play.google.com/store/apps/details?id=com.pingmu.pingmu_player&pcampaignid=pcampaignidMKT-Other-global-all-co-prtnr-py-PartBadge-Mar2515-1'  target="_blank">
            <img class="h-20" alt='Get it on Google Play' src='https://play.google.com/intl/en_us/badges/static/images/badges/en_badge_web_generic.png'/>
        </a>
    </div>
    <div class="h-full flex flex-1 max-w-lg justify-center content-center items-center ">
        <img src="./images/hero-large.png" alt="Large Image" class=" w-full max-w-md">
    </div>

</div>